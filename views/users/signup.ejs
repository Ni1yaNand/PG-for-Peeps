<%= layout("/layouts/boilerplate") %>

<div class="row mt-4">
    <div class="col-6 offset-3">
        <form action="/signup" method="POST" class="needs-validation form-control mb-4" novalidate>
            <h3 class="mt-2 mb-4">Sign Up on PG for Peeps</h3>

            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" type="text" class="form-control" required>
                <div class="valid-feedback">Username looks good!</div>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" type="email" class="form-control" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" type="password" class="form-control" required>
                <div class="valid-feedback">Password looks good!</div>
            </div>

            <button class="btn btn-danger mt-2 mb-1">Register</button>
        </form>
    </div>
</div>